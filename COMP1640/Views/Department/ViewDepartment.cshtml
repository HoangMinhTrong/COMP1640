@using COMP1640.ViewModels.Department.Responses
@model List<InforDepartmentResponse>

<div class="container">
    <div class="pt-3 pb-4 d-block">
        <div class="align-items-center">
            <a class="btn btn-info text-white text-center" id="addDepartmentBtn">
                <i class="material-icons text-white">
                    Create Department
                </i>
            </a>
        </div>
    </div>

    <div id="addDepartmentModal" class="modalAddDepartment">
        <!-- Modal content -->
        <div class="modal-content bg-dark w-50">
            <span class="close">&times;</span>
            <div class="row d-flex justify-content-center">
                <div class="col-md-6 col-xl-4">
                    <div class="col-md-8 col-xl-6 text-center mx-auto">
                        <p class="fw-bold text-success mb-2">Add new Department</p>
                    </div>
                    <form method="post" asp-action="CreateDepartment" enctype="multipart/form-data">
                        <div class="mb-3">
                            <input class="form-control"
                                   type="text" name="name" placeholder="Name"
                                   required="required" />
                        </div>

                                <div class="mb-3">
                            <div class="form-group">
                                <div class="input-group">
                                    <select id="qacoordinators_list" name="qacoordinatorId"
                                            class="form-select" required="required"
                                            oninvalid="this.setCustomValidity('Please select an item in the list')"
                                            oninput="setCustomValidity('')">
                                        <option value="" disabled="disabled" selected="">Select Qacoorditor</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <button class="btn btn-primary shadow d-block w-100" type="submit">Add</button>
                        </div>


                    </form>
                </div>
            </div>
        </div>
    </div>





    <table class="table table-hover table-bordered  table-sencondary">
        <thead class="thead-dark">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Department</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
             
                    <td>@item.Name</td>
                    
                    <td>
                         <div class="d-flex justify-content-around">
                        <a class="btn btn-danger align-items-center text-white text-center" style="cursor:pointer" onclick=DeleteDepartment(@item.Id)>
                                                           <i class="bi bi-trash"></i>
                                                       </a>

                          
                                </div>
                    </td>
                     
                </tr>
            }
        </tbody>
    </table>
</div>

<script src="~/js/department-site.js" asp-append-version="true"></script>

