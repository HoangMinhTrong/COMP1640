                                <p>@Model.Role</p>
                                <i class="far fa-edit mb-5"></i>
                            </div>
                            <div class="col-md-8">
                                <div class="card-body p-4">
                                    <h6 style="margin-bottom: 20px">User Information </h6>
                                    <hr class="mt-0 mb-4">
                                    <div class="row pt-1">
                                        <div class="col-6 mb-3">
                                            <h6>Email</h6>
                                            <p class="text-muted">@Model.Email</p>
                                        </div>
                                        <div class="col-6 mb-3">
                                            <h6>Phone Number</h6>
                                            <p class="text-muted">@Model.PhoneNumber</p>
                                        </div>
                                        <div class="col-6 mb-3">
                                            <h6>Username</h6>
                                            <p class="text-muted">@Model.UserName</p>
                                        </div>
                                        <div class="col-6 mb-3">
                                            <h6>Gender</h6>
                                            <p class="text-muted">@Model.Gender</p>
                                        </div>
                                    </div>
                                    <hr class="mt-0 mb-4">
                                    <div class="row pt-1">
                                        <div class="col-6 mb-3">
                                            <h6>Role</h6>
                                            <p class="text-muted">@Model.Role</p>
                                        </div>
                                        <div class="col-6 mb-3">
                                            <h6>Department</h6>
                                            <p class="text-muted">@Model.Department</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

</section>

