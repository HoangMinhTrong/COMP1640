<div class="modalEdit" id="editIdeaModal">
	<div class="container py-5 h-100">
		<div class="row d-flex justify-content-center align-items-center h-100">
			<div class="col col-lg-8 mb-4 mb-lg-0">
				<div class="card mb-3" style="border-radius: .5rem;">
					<span class="close" onclick="ClosePopupEditIdea()">&times;</span>
					<h4 class="fw-bold text-success d-flex justify-content-center">Edit Your Idea</h4>
					<div class="container-fluid">
						<form enctype="multipart/form-data">
							<div class="card mb-3">
								<div class="card-body">
									<div class="mb-3">
										<input hidden class="form-control info-ideaId" id="info-edit-ideaId" type="text" name="id" required />
									</div>
									<div class="row">
										<div class="col-sm-12 col-md-7 col-lg-8">
											<div class="mb-3">
												<label class="form-label" for="title"><strong> Title*</strong></label>
												<input id="info-edit-title" class="form-control info-title" type="text" placeholder="Idea's title" name="title" required />
											</div>
										</div>
									</div>
									<div class="col-sm-12 col-md-4 col-lg-4">
										<div class="mb-3">
											<label class="form-label" for="formfiles"><strong>Attach file</strong><br /></label>
											<input class="form-control" type="file" id="formfiles" name="formfiles" />
										</div>
									</div>

									<div class="mb-3">
										<label class="form-label" for="content"><strong>Content*</strong><br /></label>
										<textarea id="info-edit-content" class="form-control info-content" rows="4" name="content" placeholder="Idea's content" required></textarea>
									</div>

									<div class="row mb-2">
										<div class="col">
											<div class="mb-3">
												<label class="form-label" for="category_list"><strong>Category*</strong></label>
												<select id="category_list" name="CategoryId"
														class="form-select" required="required">
													<option value="" disabled>Select Category</option>
												</select>
											</div>
										</div>
									</div>
									<div class="form-check">
										<input class="form-check-input" type="checkbox" value="true" id="isAnonymous" name="isAnonymous">
										<input class="form-check-input" type="hidden" value="false" id="isAnonymous" name="isAnonymous">
										<label class="form-check-label" for="isAnonymous">
											Is Anonymous
										</label>
									</div>



									<div class="form-check">
										<input class="form-check-input" type="checkbox" value="" id="agreeTerm" required>
										<label class="form-check-label" for="agreeTerm">
											I agree with our Terms and Conditions
										</label>
									</div>
								</div>
							</div>
							<div class="text-end mb-3">
								<button class="btn btn-primary btn-lg" type="submit" onclick="EditIdeaInfo()">Edit</button>
								<a class="btn btn-danger btn-lg" role="button" asp-controller="Personal" asp-action="ViewYourIdea">Cancel</a>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
