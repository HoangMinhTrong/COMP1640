<div class="modalEdit" id="editUserModal">
    <!-- Modal content -->
    <div class="modal-content bg-dark w-50">
        <span class="close">&times;</span>
        <div class="row d-flex justify-content-center">
            <div class="col-md-6 col-xl-4">
                <div class="col-md-8 col-xl-6 text-center mx-auto">
                    <p class="fw-bold text-success mb-2">Edit User</p>
                    <h6 class="fw-bold">Change user Information</h6>
                </div>
                <form method="put" asp-action="Edit" enctype="multipart/form-data">
                    <div class="mb-3">
                        <input class="form-control info-username"
                                type="text" name="name" placeholder="Full Name"
                                required="required"/>
                    </div>
                    <div class="mb-3">
                        <input class="form-control info-email"
                                type="text" name="email" placeholder="Email"
                                required="required"/>
                    </div>
                    <div class="mb-3">
                        <div class="form-group">
                            <div class="input-group">
                                <select id="roles_list_edit" name="role"
                                        class="form-select" required="required"
                                        oninvalid="this.setCustomValidity('Please select an item in the list')"
                                        oninput="setCustomValidity('')">
                                    <option class="info-role" disabled="disabled">Select Role</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="form-group">
                            <div class="input-group">
                                <select id="departments_list_edit" name="departmentId"
                                        class="form-select" required="required"
                                        oninvalid="this.setCustomValidity('Please select an item in the list')"
                                        oninput="setCustomValidity('')">
                                    <option class="info-department" disabled="disabled">Select Department</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="form-group">
                            <div class="input-group">
                                <select name="gender"
                                        class="form-select">
                                    <option disabled="disabled">Select Gender</option>
                                    <option class="info-gender-1" value="1">Male</option>
                                    <option class="info-gender-2" value="2">Female</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <input id="birthday" 
                                name="birthday" 
                                class="form-control info-birthday"
                                placeholder="Birthday"
                                type="text"
                                onblur="(this.type='text')"/>
                    </div>
                    <div class="mb-3">
                        <button class="btn btn-primary shadow d-block w-100" type="submit">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
